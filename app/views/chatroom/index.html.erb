				      <i class="bordered edit icon" style="color: white; background-color: #00bcd4"></i>
				    </div>
				  </div>
			  </form>
			</div>
		</div>
	</div>

<!-- SIDE MENU -->
	<div class="four wide column">
		<div class="ui fluid raised card chatbox">
		  <div class="content">
				<div class="ui inverted vertical pointing menu">
				  <a class="active item">
				    Home
				  </a>
				  <a class="item">
				    Messages
				  </a>
				  <a class="item">
				    Friends
				  </a>
				</div>
			</div>
		</div>
	</div>

</div>