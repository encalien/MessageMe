  <i class="circular comments icon" style="color:#00bcd4"></i>
  Messages
</h4>

<div class="ui two column grid">
<!-- CHAT FEED -->
	<div class="twelve wide column">
		<div class="ui fluid raised card chatbox">
		  <div class="content">
				<div class="ui feed">
				  <div class="event">
				    <div class="content">
				      <div class="summary">
				         <a>Elliot Fu</a> added <a>Jenny Hess</a> as a friend
				      </div>
				    </div>
				  </div>
